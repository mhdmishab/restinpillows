                  <input type="password" id="password" class="form-control" name="newpassword" style="border-radius: 18px;" />
                  <label class="form-label" for="form3Example4">New Password</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="password" id="Cpassword" class="form-control" name="Cnewpassword" style="border-radius: 18px;" />
                  <label class="form-label" for="form3Example4">Confirm New Password</label>
                </div>

                
                <div class="text-danger " id="alertmsg"  role="alert">
                  <%= msg%>
                </div>
                <div id="alertforgotPass"></div>

                <!-- Submit button -->
                <!-- <a type="button" class="forgotpass forgotpass-success text-decoration-none" href=""  data-bs-toggle="modal" data-bs-target=""> -->
