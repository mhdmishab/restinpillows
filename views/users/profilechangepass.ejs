<%- include ('../users/layout/header.ejs') %>

<div style="height: 7rem; width: 100%;"></div>

<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="card text-center" style="width: 300px;">
        <div class="card-header h5 text-white bg-primary">Change Password</div>
        <div class="card-body px-5">
            <p class="card-text py-2">
                Enter Your New Password:
            </p>
            <form action="/postChangePassword" method="post">
               
                    <input type="password" name="oldPassword" placeholder="Enter  old Password" id="email" class="form-control" value="" required/>
                  
                <input name="newPassword" type="text" placeholder="New Password" id="newPassword" class="form-control my-3" required/>
                
                    <small class="text-danger"><%=error%></small>
        
            <button type="submit"  class="btn btn-primary w-100 text-white">Reset</button>
        </form>
     
            <div class="d-flex justify-content-between mt-4">
                <a class="/login" href="#">Login</a>
                <a class="/signup" href="#">Register</a>
            </div>
        </div>
    </div>
    </div>
