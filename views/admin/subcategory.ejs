        <!-- End of Topbar -->

         <!-- Button trigger modal -->
 
 
    
    <button type="button" class="btn btn-success m-5"><a class="dropdown text-gray-400 text-decoration-none"  data-toggle="modal" data-target="#subcategoryModal">Add Category</a></button>

    <div class="form-control text-danger"><%= msg %> </div>
  
  

    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Sub-categories</th>
            <th scope="col">Action</th>
            
          </tr>
        </thead>
        <tbody>
            <% var i=1 %>
            <% subcategory.forEach((element) => {%>
               <tr>
                <td><%= i%></td>
                <td><%= element.subcategoryname %></td>
                
                <td><button class="btn btn-danger"><a class="text-decoration-none text-gray-400" href="/admin/deletesubcategory/?id=<%= element._id%>" onclick="return confirm ('Do You want to delete <%= element.subcategoryname%>')">delete</a></button></td>


               </tr> 
               <% i++%>
            <%})%>
          
        </tbody>
      </table>




            

            <!-- Footer -->
            <%- include('../admin/layout/adminfooter.ejs') %>

            <div class="modal fade" id="subcategoryModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
