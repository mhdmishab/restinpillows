                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Sub-categoy Name</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"></span>
                        </button>
                    </div>
                <form method="post" action="/admin/subcategorypost">
                    <div class="modal-body">
                            <input class="form-control" type="text" placeholder="Sub-category name" name="mysubcategory" required>
                    </div>

                
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <button type="submit">save</button>
                    </div>
                </form>
                </div>
                </div>
                </div>


